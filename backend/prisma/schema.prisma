generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Job {
  id        String   @id @default(cuid())
  taskName  String
  payload   String
  priority  String
  status    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model WebhookLog {
  id        String   @id @default(cuid())
  jobId     String
  url       String
  payload   String
  response  String?
  status    Int
  createdAt DateTime @default(now())
}